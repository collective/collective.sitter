<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.sitter">

<metal:main fill-slot="main">

  <div
    tal:define="current_step view/get_current_registration_step|nothing"
    tal:condition="current_step"
    class="table sitter-step-info">
    <div class="table-row table-cell">
      <p>
        <i class="fa fa-info-circle fa-4x info"></i>
      </p>
    </div>
    <div class="table-row table-cell">
      <p class="table sitter-step-info-head">
        <a tal:condition="current_step/link"
           tal:content="structure current_step/text"
           tal:attributes="href current_step/link" />
        <span tal:condition="not: current_step/link"
              tal:content="structure current_step/text" />
      </p>
      <p tal:content="structure current_step/description" />
    </div>
  </div>

  <div class="sittercontainer" >
    <metal:macro define-macro="sittercontent">
      <div class="sittercontent" >
        <div tal:define="fullage view/sitter/fullage; gender view/sitter/get_gender"
             tal:condition="python:fullage or gender">
          <tal:span condition="fullage" i18n:translate="full age">full age
          </tal:span><tal:span condition="python:fullage and gender">,</tal:span>
          <tal:span condition="gender" content="gender" />
        </div>

        <div class="sitterimageholder" tal:condition="view/sitter/has_image">
          <img tal:attributes="src string:${view/sitter/absolute_url}/@@images/image/large"/>
        </div>
        <div class="sitterinformation" tal:content="structure view/sitter/get_details" />
      </div>
      <div style="clear:both;"></div>

      <div class="flexcontainer">
        <div class="child" tal:condition="view/sitter/qualifications">
          <div>
            <h3>Qualifikationen:</h3>
            <ul>
              <li tal:repeat="obj python: view.sitter.get_qualifications()">
                <b tal:content="obj/beschreibung"></b>
              </li>
            </ul>
          </div>
        </div>

        <div class="child" tal:condition="view/sitter/experiences">
          <div>
            <h3>
              <tal:span i18n:translate="experiences">Erfahrung</tal:span>:
            </h3>
            <ul>
              <li tal:repeat="obj python: view.sitter.get_experiences()">
                <b tal:content="obj/beschreibung"></b> (<i tal:content="obj/Title"> </i>)
              </li>
            </ul>
          </div>
        </div>

        <div class="child"
             tal:define="languages python: view.sitter.get_language_list()"
             tal:condition="languages">
          <h3>Sprachen:</h3>
          <ul>
            <li tal:repeat="langs languages">
              <b tal:content="langs"></b>
            </li>
          </ul>
        </div>

        <div class="child"
             tal:define="mobility python: view.sitter.get_mobility()"
             tal:condition="mobility">
          <h3>Mobilität:</h3>
          <ul>
            <li tal:repeat="mob mobility">
              <b tal:content="mob"></b>
            </li>
          </ul>
        </div>
      </div>
    </metal:macro>
    <div tal:define="local_referer python: view.get_local_referer()">
    <tal:back-button condition="local_referer">
      <a class="btn btn-back" tal:attributes="href local_referer">
        Zurück zur Übersicht <i class="fa fa-backward"></i>
      </a>
    </tal:back-button>
    <tal:back-button condition="not: local_referer">
      <a class="btn btn-back" tal:attributes="href view/get_overview_url">
        Zur Übersicht <i class="fa fa-reorder"></i>
      </a>
    </tal:back-button>
  </div>

  <div class="sittercontainer">
    <div class="sittercontent">
      <h2>Kontaktformular</h2>
      <div id="sittercontactform">
            <metal:block use-macro="context/@@ploneform-macros/titlelessform" />
        </div>

        <script type="application/javascript">
  /*Ugly workaround for inline validation of select fields, because of jQuery cloning bug.
  In Plone the form is cloned and "submited" to validate the field */
  $(document).on("change", "select", function(){
      var val = $(this).val(); /*get new value*/
      var index = this.selectedIndex

      /*find selected option*/
      $("option", this).removeAttr("selected").filter(function(){
          return $(this).attr("value") === val;
      }).first().attr("selected", "selected"); /*add selected attribute to
      selected option*/
      this.selectedIndex = index
  });
        </script>
  </div>
  </div>
</metal:main>

</html>

<rolemap>

    <roles>
        <role name="Sitter Manager"/>
    </roles>

    <permissions>
        <permission
            name="collective.sitter: Manage sitters"
            acquire="True">
            <role name="Manager" />
            <role name="Site Administrator" />
            <role name="Sitter Manager" />
        </permission>

        <permission
            name="collective.sitter: Add sitter"
            acquire="True">
            <role name="Member" />
        </permission>

        <permission name="Show Toolbar"
                    acquire="False">
          <role name="Manager" />
          <role name="Site Administrator" />
          <role name="Sitter Manager" />
        </permission>
    </permissions>
</rolemap>
